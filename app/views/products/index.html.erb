<h1 class="header">Listing products <%= link_to 'New product', new_product_path, class: "btn btn-primary" %></h1>
<table>
  <% @products.each do |product| %>
    <div class="row">          
           <div class="col-md-auto">

            <%= image_tag(product.image_url, class: 'mage') %>

          </div>

          <div class="col-md-5 col-10 col-xs-10 col-sm-9" style="margin-left: 25px;">


                <h1><%= product.title %></h1>
                <%= truncate(strip_tags(product.description),length: 200) %>
                <p><%= number_to_currency(product.price) %></p>  
                <br>
                <br>
              <%= link_to 'Show', product , class: "btn btn-primary"%>
              <%= link_to 'Edit', edit_product_path(product) , class: "btn btn-primary"%>
              <%= link_to 'Destroy', product, method: :delete, 
                data: { confirm: 'Are you sure?' }, class: "btn btn-primary"%>

        </div>
      </div>
  <% end %>
</table>


